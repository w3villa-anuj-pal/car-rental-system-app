<section class = "d-flex">
  <%= render 'users/sidebar' %>
  <section class = "admin-content">
    <%= render 'layouts/error' %>
    <div class = "d-flex justify-content-between">
      <h1 class = "mt-3">All Cars </h1>
      <%= search_form_for @q do |f| %>
        <div class = "d-flex mt-4 search-user">
          <div class = "form-group">
            <%= f.text_field :car_name_cont, class: "form-control",placeholder: "search car" %>
          </div>
          <div>
            <%= f.submit class: "btn btn-dark ml-2" %>
          </div>
        </div>
      <% end %>
    </div>
    <table class = "table table-bordered">
      <thead>
        <tr>
          <th>Car Name</th>
          <th>Vehcile NO.</th>
          <th>Captain Name</th>
          <th>Seater</th>
          <th>Vehicle Type</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% @cars.each do |car| %>
            <td><%= car.car_name %></td>
            <td><%= car.vehicle_no %></td>
            <td><%= car.captain_name %></td>
            <td><%= car.seater %></td>
            <td><%= car.vehicle_type %></td>
            <td><%= link_to 'Edit', edit_car_path(car), class: "btn btn-outline-success" %></td>
            <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' }  , class: "btn btn-outline-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%== pagy_nav(@pagy) %>
  </section>
</section>
