<%= form_with(model: @car) do |f| %>
  <% if @car.errors.any? %>
    <div id="error_explanation" class = "alert alert-danger text-left">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">Ã—</span>
      </button>
      <h2 class = "alert-heading">
        <%= pluralize(@car.errors.count, "error") %> prohibited this car from being saved:</h2>
      <ul>
        <% @car.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.text_field :captain_name,autofocus: true, placeholder: "Captain Name" ,class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.text_field :car_name,autofocus: true, placeholder: "Car Name",class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.text_field :vehicle_no,autofocus: true, placeholder: "Vehicle No",class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.text_field :seater,autofocus: true, placeholder: "Seats",class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.text_field :vehicle_type,autofocus: true, placeholder: "Ex: Petrol, Diesel, CNG",class: "form-control" %>
  </div>
  <div class = "upload-car-pic">
    <%= f.label :image, "Upload car image", class: "upload-profile-pic-label"%>
    <%= f.file_field :image %>
  </div>
  <%= f.submit class: 'btn btn-success mb-2' %>
<% end %>
