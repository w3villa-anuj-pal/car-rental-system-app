<section>
  <div class="p-5 bg-image sign-login-image" style="
        background-image: url(/assets/car-rentals.webp);
        height: 250px;
        background-position-y: 67%;">
  </div>
  <div class="container py-3 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5 mt-120">
        <div class="card shadow-2-strong" style="
        background: hsla(0, 0%, 100%, 0.8);
        backdrop-filter: blur(30px);
        ">
          <div class="card-body text-center m-20">
            <h3 class="mb-3">Sign in</h3>
            <%= render 'layouts/error' %>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-outline mb-4">
                <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control form-control-lg',placeholder: "Enter Email Address" %>
              </div>
              <div class="form-outline mb-4">
                <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control form-control-lg' ,placeholder: "Enter Password" %>
              </div>
              <h6 class ="login-h3">or</h6>
              <h6 class="mb-3">Sign in with Phone Number</h6>
              <div class="form-outline mb-4">
                <%= f.text_field :phone_number, id: "phone", class: "form-control form-control-lg", placeholder: "Enter Phone no. with country code" %>
              </div>
              <!-- Checkbox -->
              <div class="form-check d-flex justify-content-start mb-2">
                <% if devise_mapping.rememberable? %>
                  <div class="form-group form-check">
                    <%= f.check_box :remember_me, class: 'form-check-input' %>
                    <%= f.label :remember_me, class: 'form-check-label' do %>
                      <%= resource.class.human_attribute_name('remember_me') %>
                    <% end %>
                  </div>
                <% end %>
              </div>
              <div>
                <!-- Submit button -->
                <%= f.submit 'Sign in', class: 'btn btn-primary btn-block btn-lg mb-2' %>
              </div>
            <% end %>
            <%= render 'devise/shared/links' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
