<div class = "container d-flex justify-content-center">
  <div class="card mx-4 mx-md-5 shadow-5-strong" style="
        margin-top: 25px;
        background: hsla(0, 0%, 100%, 0.8);
        backdrop-filter: blur(30px);
        width: 550px;
        ">
    <div class="card-body py-5 px-md-5">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render 'devise/shared/error_messages' %>
        <h1 class = "text-center"><%= t('.Edit_Your_Profile', resource: resource_name.to_s.humanize) %></h1>
        <p class = "d-flex justify-content-center">
          <% if @user.image %>
            <%= image_tag @user.image_url , class: 'profile-pic-style' %>
          <% end %>
        </p>
        <div class="field">
          <%= f.label :image, "Upload profile pic" , class: "font-weight-bold" %><br>
          <%= f.file_field :image %>
        </div>
        <div class="row mt-3">
          <div class="col-md-6 mb-4">
            <div class="form-outline">
              <%= f.text_field :first_name, autofocus: true, autocomplete: 'first name', class: 'form-control', placeholder: "First Name"%>
            </div>
          </div>
          <div class="col-md-6 mb-4">
            <div class="form-outline">
              <%= f.text_field :last_name, autofocus: true, autocomplete: 'last name', class: 'form-control', placeholder: "Last Name"%>
            </div>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :phone_number %>
          <%= f.phone_field :phone_number, autofocus: true, autocomplete: 'phone number', class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control' %>
          <small class="form-text text-muted"><%= t('.leave_blank_if_you_don_t_want_to_change_it') %></small>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control'  %>
        </div>
        <div class="form-group">
          <%= f.label :current_password %>
          <%= f.password_field :current_password, autocomplete: 'current-password', class: 'form-control' %>
          <small class="form-text text-muted"><%= t('.we_need_your_current_password_to_confirm_your_changes') %></small>
        </div>
        <div class="actions">
          <%= f.submit "Update", class: 'btn btn-success' %>
        </div>
      <% end %>
      <p><%= t('.unhappy') %>? <%= link_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure') }, method: :delete %>.</p>
      <%= link_to t('.back'), :back %>
    </div>
  </div>
</div>
