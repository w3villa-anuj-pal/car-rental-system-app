<section class="text-center">
  <div class="p-5 bg-image" style="
        background-image: url(/assets/car-rentals.webp);
        height: 250px;
        background-position-y: 67%;">
  </div>
  <div class = "container d-flex justify-content-center">
    <!-- Background image -->
    <!-- Background image -->
    <div class="card mx-4 mx-md-5 shadow-5-strong" style="
        margin-top: -150px;
        background: hsla(0, 0%, 100%, 0.8);
        backdrop-filter: blur(30px);
        width: 550px;
        ">
      <div class="card-body py-4 px-md-5">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <h2 class="fw-bold mb-5">Sign up now</h2>
          <%= render 'devise/shared/error_messages' %>
          <!-- 2 column grid layout with text inputs for the first and last names -->
          <div class="row">
            <div class="col-md-6 mb-4">
              <div class="form-outline">
                <%= f.text_field :first_name, autofocus: true, autocomplete: 'first name', class: 'form-control', placeholder: "First Name"%>
              </div>
            </div>
            <div class="col-md-6 mb-4">
              <div class="form-outline">
                <%= f.text_field :last_name, autofocus: true, autocomplete: 'last name', class: 'form-control', placeholder: "Last Name"%>
              </div>
            </div>
          </div>
          <!-- Email input -->
          <div class="form-outline mb-4">
            <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', placeholder: "Email Address"%>
          </div>
          <%# phone input  %>
          <div class="form-outline mb-4">
            <%= f.phone_field :phone_number, autofocus: true, autocomplete: 'phone number', class: 'form-control' , placeholder: "Mobile Number"%>
          </div>
          <!-- Password input -->
          <div class="form-outline mb-4">
            <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control' , placeholder: "Password"%>
            <small class="form-text text-muted text-justify"><%= "Minimum Password Length 6" %></small>
          </div>
          <!-- Password input -->
          <div class="form-outline mb-4">
            <%= f.password_field :password_confirmation, autocomplete: 'current-password', class: 'form-control' , placeholder: "Confirm Password"%>
          </div>
          <!-- Submit button -->
          <%= f.submit 'Sign up', class: 'btn btn-primary btn-block mb-2' %>
        <% end %>
        <%= render 'devise/shared/links' %>
      </div>
    </div>
  </div>
</section>
